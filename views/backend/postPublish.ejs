<%- include ../common/header.ejs %>
<%- include ../common/navigation.ejs %>
<div class="container top-margin">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="/forum//backend/post/list.html" class="list-group-item">List</a>
                <a href="/forum//backend/post/publish.html" class="list-group-item active">Publish</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="panel panel-primary">
                <div class="panel-heading text-left">
                    Publish Post
                </div>
                <div class="panel-body" id="post-panel">
                    <form class="form-horizontal" id="postForm">
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" required class="form-control" name="title" placeholder="post title" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <script id="editor" aria-placeholder="content" type="text/plain" name="content" style="width:100%;height:300px;"></script>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 text-left">
                                <span id="publish-btn" class="btn btn-primary">publish</span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ../common/commonjs.ejs %>
<script src="/javascripts/post.js"></script>
<%- include ../common/footer.ejs %>