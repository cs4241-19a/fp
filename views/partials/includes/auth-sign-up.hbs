<div id="sign-up-alert" class="alert alert-danger d-none" role="alert">
    <strong>Sign Up Failed</strong> <span></span>
</div>
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="sign-up-name" placeholder="name" required>
</div>
<div class="form-group">
    <label for="sign-up-email">Email</label>
    <input type="email" class="form-control" id="sign-up-email" placeholder="Email" required>
    <label for="sign-up-password">Password</label>
    <input type="password" class="form-control" id="sign-up-password" placeholder="Password">
</div>
