<%- include common/header.ejs %>
<link rel="stylesheet" href="/stylesheets/form-elements.css" />
<link rel="stylesheet" href="/stylesheets/style.css">
<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 text">
                    <h1><strong>Mengo forum</strong> Login Page</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3 form-box">
                    <div class="form-top">
                        <div class="form-top-left">
                            <h3>Login to our forum</h3>
                            <% if(errorMsg) {%>
                                <p style="color: red;"><%= errorMsg %></p>
                            <% } %>
                        </div>
                        <div class="form-top-right">
                            <i class="fa fa-lock"></i>
                        </div>
                    </div>
                    <div class="form-bottom">
                        <form role="form" action="/forum/loginValidate.html" method="post" class="login-form">
                            <div class="form-group">
                                <label class="sr-only" for="form-username">Email</label>
                                <input type="email" placeholder="Eamil..."
                                    class="form-username form-control" id="form-username" name="email" />
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="form-password">Password</label>
                                <input type="password" placeholder="Password..."
                                    class="form-password form-control" id="form-password" name="password" />
                            </div>
                            <button type="submit" class="btn">Sign in!</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Javascript -->
<script src="/javascripts/jquery-1.11.1.min.js"></script>
<script src="/plugins/bootstrap/js/bootstrap.min.js"></script>
<script src="/javascripts/jquery.backstretch.min.js"></script>
<script src="/javascripts/scripts.js"></script>

